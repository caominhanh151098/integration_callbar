    <div class='callbar-toggle' style="display: flex; width: 30px; align-items: center; justify-content: center; cursor: pointer;">
      <i t-if="!close.value"
        class="fa fa-lg fa-phone"
        title="Call"
        t-on-click="toggleCallbar"
      />
      <i t-if="close.value"
        class="fa fa-lg fa-phone text-white"
        title="Call"
        t-on-click="toggleCallbar"
      />
    </div>
  </t>
</templates>


